<!DOCTYPE html>
<html lang="ko">

<head>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>로그인</title>
    <link rel="stylesheet" href="login.css">
    <link rel="shortcut icon" href="/icon.png" type="image/x-icon">

    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="http://code.jquery.com/jquery-3.4.1.min.js"></script>


</head>

<body>

    <section class="login-form">
        <h1>
            <a href="/main"><img src="logo.png" width="300px" /></a>
        </h1>
        <form action="/" method="post">
            <div class="int-area">
                <input type="text" name="id" id="id" acutocomplete="off" required>
                <label for="id">아이디</label>
            </div>
            <div class="int-area">
                <input type="password" name="pw" id="pw" acutocomplete="off" required>
                <label for="pw">비밀번호</label>
            </div>

            <div class="btn-area">
                <button type="submit" id="btn" name="btn">로그인</button>
            </div>
        </form>
        <div class="caption">
            <a href="/register">회원가입</a>
        </div>
    </section>
    <script type="text/javascript">
        localStorage.setItem('id', '"6284e4af0fab70dab03a19f6"')
        let id = $('#id');
        let pw = $('#pw');
        let btn = $('#btn');

        $(btn).on('click', function () {


            if ($(id).val() == "") {
                $(id).next('label').addClass('warning');

            }
            else if ($(pw).val() == "") {
                $(pw).next('label').addClass('warning');
            }


        });
    </script>

    <script>
    </script>





</body>

</html>