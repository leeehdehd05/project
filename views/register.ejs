<!DOCTYPE html>
<html lang="ko">

<head>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>로그인</title>
    <link rel="stylesheet" href="login.css">
    <link rel="shortcut icon" href="/icon.png" type="image/x-icon">
    <script src="http://code.jquery.com/jquery-3.3.1.min.js"></script>


</head>

<body>
    <div class=back>
        <section class="login-form">
            <h1>REGISTER</h1>
            <form action="/register" method="post">
                <div class="int-area">
                    <input type="text" name="id" id="id" acutocomplete="off" required>
                    <label for="id">아이디</label>
                </div>
                <div class="int-area">
                    <input type="password" name="pw" id="pw" acutocomplete="off" required>
                    <label for="pw">비밀번호</label>
                </div>

                <div class="int-area">
                    <input type="text" name="성별" id="성별" acutocomplete="off" required>
                    <label for="sex">남자/여자</label>
                </div>
                <div class="int-area">
                    <input type="text" name="나이" id="나이" acutocomplete="off" required>
                    <label for="age">나이</label>
                </div>

                <div class="btn-area">
                    <button type="submit">회원가입</button>
                </div>
            </form>
        </section>



        <script>
            let id = document.querySelector('#id')
            let pw = document.querySelector('#pw')
            let btn = document.querySelector('#btn')

            btn.addEventListener('click', () => {
                if (id.value == "") {
                    label = id.nextElementSibling
                    label.classList.add('warning')
                    setTimeout(() => {
                        label.classList.remove('warning')
                    }, 1500)
                } else if (pw.value == "") {
                    label = pw.nextElementSibling
                    label.classList.add('warning')
                    setTimeout(() => {
                        label.classList.remove('warning')
                    }, 1500)
                }
            })
        </script>


    </div>
</body>

</html>